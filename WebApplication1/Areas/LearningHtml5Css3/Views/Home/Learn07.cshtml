    <style>
      .flip-card{
          position:relative;
          transition:all 800ms;
          transform-style:preserve-3d;
      }

       .flip-card:hover .flip-card-front{
           transform:rotateY(180deg);
       }
       
       .flip-card:hover .flip-card-back{
           transform:rotateY(0deg);
       }

       .flip-card-front{
           z-index:2;
           transition:1000ms;
           position:relative;
           margin-bottom:16px;
           backface-visibility:hidden;
           transform-style:preserve-3d;
       }

       .flip-card-back{
           top:0;
           left:0;
           width:100%;
           height:100%;
           transition:1000ms;
           position:absolute;
           transform:rotateY(-180deg);
           backface-visibility:hidden;
           transform-style:preserve-3d;
       }
       
    </style>
</head>

