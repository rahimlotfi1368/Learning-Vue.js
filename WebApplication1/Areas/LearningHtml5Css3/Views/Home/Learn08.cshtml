    <style>

        .flip-card {
            position: relative;
        }

            .flip-card .isFlipped {
                transform: rotateY(180deg);
                transform-style: preserve-3d;
            }

        .flip-card-front {
            z-index: 2;
            margin-bottom: 16px;
            transition: 1s;
            position: relative;
            backface-visibility: hidden;
            transform-style: preserve-3d;
        }

        .flip-card-back {
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            transition: 1s;
            position: absolute;
            backface-visibility: hidden;
            transform-style: preserve-3d;
        }
    </style>
